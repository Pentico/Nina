<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tam.tuane.ninaagile.front_end.fragments.Notification"
    android:background="@drawable/back8"
    >

    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Go to Main Menu"
        android:id="@+id/debug_response"
        android:background="@drawable/cartbtn"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/debug_query"
        android:layout_gravity="center_horizontal"
        android:text="Please Wait ...."
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        />


</FrameLayout>
