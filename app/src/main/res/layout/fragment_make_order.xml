
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tam.tuane.ninaagile.front_end.fragments.MakeOrder"
    android:id="@+id/fragment_makeOrder"
    android:clickable="false">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingRight="5dp"
        android:id="@+id/cardview0"
        >

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="5dp"
          android:padding="0dp"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items in Cart : 0 "
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/itemCount"
            android:layout_alignBaseline="@+id/startOver"
            />


        <Button
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:id="@+id/startOver"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="Clear Cart"
            android:background="@drawable/cartbtn"
            android:textColor="@android:color/white"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_layout"
            android:layout_below="@id/startOver"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price : R 0.00"
            android:id="@+id/totalPrice"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/card_layout"
            android:layout_margin="15dp"
            />

      </RelativeLayout>



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview1"
        android:layout_below="@id/cardview0"
        >

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/items_fragment"
          android:layout_marginTop="30dp"
          android:layout_marginBottom="30dp"
          />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/cardview2"
        android:layout_below="@+id/cardview1"
        >

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick n Drop"
            android:id="@+id/delivery_checkbox"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Business Address"
            android:id="@+id/buisness_address"
            android:layout_alignParentRight="true"
            />


        <Button
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/processed_button"
            android:text="Proceed"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cartbtn"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            />

      </RelativeLayout>

    </android.support.v7.widget.CardView>


  </RelativeLayout>

</ScrollView>
