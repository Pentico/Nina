<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/helpLayout"
    android:background="@drawable/back8"
    tools:context="com.tam.tuane.ninaagile.front_end.activity.Help">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nina is Available only in Auckland Park,
        Braamfrontein, and Park Town
        NB: Pick and Drop is only available in Braamfontein at The Moment
        "
        android:layout_alignParentTop="true"
        android:id="@+id/helptext"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Send Feedback"
        android:textAllCaps="false"
        android:id="@+id/feedback"
        android:background="@drawable/cartbtn"
        android:drawableLeft="@drawable/ic_feedback_black_24dp"
        android:drawableStart="@drawable/ic_feedback_black_24dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/helptext"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
