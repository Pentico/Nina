<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tam.tuane.ninaagile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".front_end.activity.DrawerActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".front_end.activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".front_end.activity.MainActivity" />
        </activity>
        <activity
            android:name=".front_end.activity.TermsActivity"
            android:label="Terms &amp; Conditions"
            android:parentActivityName=".front_end.activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".front_end.activity.MainActivity" />
        </activity>
        <activity
            android:name=".front_end.activity.PrivacyPolicy"
            android:parentActivityName=".front_end.activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            >
            <meta-data
                android:label="Privacy Policy"
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".front_end.activity.MainActivity" />
        </activity>
        <activity
            android:name=".front_end.activity.Help"
            android:parentActivityName=".front_end.activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".front_end.activity.MainActivity" />
        </activity>
        <activity android:name=".front_end.activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>